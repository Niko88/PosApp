<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.nicholasesposito.posapp.activities.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:background="#e6e0e0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2e6e9c">
            <ImageButton
                android:layout_width="97dp"
                android:layout_height="60dp"
                android:src="@drawable/coffeeicon"
                android:scaleType="centerInside"
                android:id="@+id/coffeesButton"
                />
            <ImageButton
                android:layout_width="97dp"
                android:layout_height="60dp"
                android:src="@drawable/drink"
                android:scaleType="centerInside"
                android:id="@+id/drinksButton"
                />
            <ImageButton
                android:layout_width="97dp"
                android:layout_height="60dp"
                android:src="@drawable/cake"
                android:scaleType="centerInside"
                android:id="@+id/cakesButton"
                />
            <ImageButton
                android:layout_width="97dp"
                android:layout_height="60dp"
                android:src="@drawable/sandwich"
                android:scaleType="centerInside"
                android:id="@+id/sandwichButton"
                />
            <ImageButton
                android:layout_width="97dp"
                android:layout_height="60dp"
                android:scaleType="centerInside"
                />
            <ImageButton
                android:layout_width="97dp"
                android:layout_height="60dp"
                android:scaleType="centerInside"
                />
            <ImageButton
                android:layout_width="97dp"
                android:layout_height="60dp"
                android:src="@drawable/menuicon"
                android:scaleType="centerInside"
                android:id="@+id/menuButton"
                />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/optionsFragment"/>
    </LinearLayout>


    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/transactionDetailsFragment"
        android:background="#c7dbdc"/>

</LinearLayout>
