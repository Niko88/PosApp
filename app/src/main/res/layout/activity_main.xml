<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.nicholasesposito.posapp.activities.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:background="#edeaea">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#edeaea">
            <Button
                style="@style/ButtonStyle"
                android:id="@+id/coffeesButton"
                android:text="Hot Drinks"
                android:layout_marginLeft="10dp"
                />
            <Button
                style="@style/ButtonStyle"
                android:text="Juices"
                android:id="@+id/drinksButton"
                />
            <Button
                style="@style/ButtonStyle"
                android:text="Cakes"
                android:id="@+id/cakesButton"
                />
            <Button
                style="@style/ButtonStyle"
                />
            <Button
                style="@style/ButtonStyle"
                android:text="Options"
                android:id="@+id/menuButton"
                />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:id="@+id/optionsFragment"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Current Sale"
        android:textSize="18dp"
        android:textColor="#2d36e7"
        android:background="#fcffff"
        android:paddingLeft="43dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:id="@+id/transactionDetailsFragment"
            android:background="#fcfeff"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/chargeButton"
            android:backgroundTint="#26bcde"
            android:textStyle="bold"
            android:textColor="#f1f6f7"
            android:text="Charge: "/>
    </LinearLayout>


</LinearLayout>
